@model IEnumerable<Personel_Finansal_Takip.Models.fazla_mesai>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/employee/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Fazla Mesai Geçmişim</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Adı Soyadı</th>
                                <th>Süre (Saat)</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var fazlaMesai in Model)
                            {
                                <tr>
                                    <td>@fazlaMesai.personel.ad @fazlaMesai.personel.soyad</td>
                                    <td>@fazlaMesai.sure_saat</td>
                                    <td>@fazlaMesai.tarih.Value.ToString("yyyy\\/MM\\/dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

